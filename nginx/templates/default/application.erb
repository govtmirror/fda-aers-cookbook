# Gunicorn server
upstream django {
  server         localhost:<% @nginx[:serve_port] %>;
}

# Serve static files and redirect any other request to Gunicorn
server {
  listen       80;
  server_name  _;
  root        <% @deploy[:deploy_to] %>;
  access_log  <% @nginx[:log_dir] %>/<% @deploy[:application] %>.access.log;
  error_log  <% @nginx[:log_dir] %>/<% @deploy[:application] %>.error.log;

  # Check if a file exists at /var/www/domain/ for the incoming request.
  # If it doesn't proxy to Gunicorn/Django.
  try_files $uri @django;

  # Setup named location for Django requests and handle proxy details
  location @django {
    proxy_pass         http://django;
    proxy_redirect     off;
    proxy_set_header   Host             $host;
    proxy_set_header   X-Real-IP        $remote_addr;
    proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
  }
}